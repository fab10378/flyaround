{% extends 'base.html.twig' %}

{% block body %}
    <h1> Review List</h1>

    <table>
        <tbody>
        <tr>
            <th>Review (id)</th>
            <td>{{ review.id }}</td>
        </tr>
        <tr>
            <th>User Rated</th>
            <td>{{ review.userRated }}</td>
        </tr>
        <tr>
            <th>Review Author</th>
            <td>{{ review.reviewAuthor }}</td>
        </tr>
        <tr>
            <th>Text</th>
            <td>{{ review.text }}</td>
        </tr>
        <tr>
            <th>Publication Date</th>
            <td>{% if review.publicationDate %}{{ review.publicationDate|date('Y-m-d') }}{% endif %}</td>
        </tr>
        <tr>
            <th>Note</th>
            <td>{{ review.note }}</td>
        </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('review_new') }}">Create a new review</a>
        </li>
    </ul>
{% endblock %}